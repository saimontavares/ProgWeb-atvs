<div>
    <h3>Cadastro de Usuário</h3>
</div>
{{#if error}}
  <div class="alert alert-danger">{{error}}</div>
{{/if}}
<form id="formUser" method="POST" action="/user/create">
    <div class="mb-3">
        <label for="name" class="form-label">Nome Completo</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Digite o nome completo" value="{{values.name}}" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Digite o e-mail" value="{{values.email}}" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Senha</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Digite a senha" required>
    </div>
    <div class="mb-3">
        <label for="repeatPassword" class="form-label">Repetir Senha</label>
        <input type="password" class="form-control" id="repeatPassword" name="repeatPassword" placeholder="Repita a senha" required>
    </div>
    <div class="mb-3">
        <label for="majorId" class="form-label">Curso</label>
        <select class="form-select" id="majorId" name="majorId" required>
            <option value="">Selecione um curso</option>
            {{#each majors}}
            <option value="{{this.id}}" {{#ifMajorIDEquals ../values.majorId this.id}}selected{{/ifMajorIDEquals}}>{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
<script>
document.getElementById('formUser').addEventListener('submit', function(e) {
    const senha = document.getElementById('password').value;
    const repetir = document.getElementById('repeatPassword').value;
    if (senha !== repetir) {
        e.preventDefault();
        alert('As senhas não coincidem!');
        document.getElementById('repeatPassword').focus();
    }
});
</script>