<div class="d-flex justify-content-between align-items">
    <h3>Lista de Usuários</h3>
    <div>
        <a href="/user/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i></a>
    </div>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr style="vertical-align: middle;">
            <th scope="col">Nome Completo</th>
            <th scope="col">E-mail</th>
            <th scope="col">Curso</th>
            <th scope="col" style="text-align: right">Opções</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        {{#each users}}
        <tr style="vertical-align: middle;">
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{majorId}}</td>
            <td style="text-align: right">
                <a href="/user/read/{{id}}" class="btn btn-info"><i class="bi bi-info-circle"></i></a>
                <a href="/user/update/{{id}}" class="btn btn-warning"><i class="bi bi-pencil"></i></a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#removerUser-{{id}}">
                    <i class="bi bi-trash"></i>
                </button>
                <div class="modal fade" id="removerUser-{{id}}" tabindex="-1" aria-labelledby="removerUserLabel-{{id}}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="removerUserLabel-{{id}}">Remover Usuário</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Tem certeza que deseja remover o usuário <strong>{{name}}</strong>?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                <button type="button" class="btn btn-danger" onclick="removerUser('{{id}}')">Remover</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>