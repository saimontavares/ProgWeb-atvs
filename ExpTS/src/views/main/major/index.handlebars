<div class="d-flex justify-content-between align-items">
    <h3>Lista de Cursos</h3>
    <div>
        <a href="/major/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i></a>
    </div>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr style="vertical-align: middle;">
            <th scope="col">Sigla</th>
            <th scope="col">Nome</th>
            <th scope="col" style="text-align: right">Opções</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        {{#each majors}}
        <tr style="vertical-align: middle;">
            <th scope="row">{{code}}</th>
            <td>{{name}}</td>
            <td style="text-align: right">
                <a href="/major/read/{{id}}" class="btn btn-info"><i class="bi bi-info-circle"></i></a>
                <a href="/major/update/{{id}}" class="btn btn-warning"><i class="bi bi-pencil"></i></a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-{{id}}">
                    <i class="bi bi-trash"></i>
                </button>

                <!-- Modal -->
                <div class="modal fade" id="deleteModal-{{id}}" tabindex="-1" aria-labelledby="deleteModalLabel-{{id}}" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel-{{id}}">Confirmar Exclusão</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                      </div>
                      <div class="modal-body">
                        Tem certeza que deseja excluir o curso <strong>{{name}}</strong>?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger" onclick="deletarMajor('{{id}}')">Excluir</button>
                      </div>
                    </div>
                  </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script>
function deletarMajor(majorIdToDelete) {
    fetch(`/major/remove/${majorIdToDelete}`, { method: 'POST' })
        .then(response => {
            if (response.ok) {
                // Fecha o modal
                const modal = bootstrap.Modal.getInstance(document.getElementById(`deleteModal-${majorIdToDelete}`));
                if (modal) modal.hide();

                // Remove a linha da tabela
                const row = document.querySelector(`button[data-bs-target="#deleteModal-${majorIdToDelete}"]`)?.closest('tr');
                if (row) row.remove();
            } else {
                alert('Erro ao deletar');
            }
        });
}
</script>